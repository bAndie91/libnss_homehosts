#!/bin/sh
# postinst script for nss-envhosts
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

ldconfig

# Add entry to nsswitch.conf
sed -i 's|\(^hosts:.*\)files|\1envhosts files|g' /etc/nsswitch.conf

exit 0
